---
const icons = [
    {name: "Python", src: "/python-gray.svg", colorSrc: "/python-color.svg"},
    {name: "C", src: "/c-gray.svg", colorSrc: "/c-color.svg"},
    {name: "HTML", src: "/html-gray.svg", colorSrc: "/html-color.svg"},
    {name: "CSS", src: "/css-gray.svg", colorSrc: "/css-color.svg"},
    {name: "Tailwind", src: "/tailwind-gray.svg", colorSrc: "/tailwind-color.svg"},
    {name: "JavaScript", src: "/js-gray.svg", colorSrc: "/js-color.svg"},
    {name: "SQL", src: "/sql-gray.svg", colorSrc: "/sql-color.svg"},
    {name: "NodeJS", src: "/node-gray.svg", colorSrc: "/node-color.svg"},
    {name: "Flask", src: "/flask-gray.svg", colorSrc: "/flask-color.svg"},
    {name: "Astro", src: "/astro-gray.svg", colorSrc: "/astro-color.svg"},
];
---

<section class="bg-black opacity-80 p-4 rounded-lg shadow-md max-w-4xl mx-auto text-center mt-6">
    <h2 class="text-2xl font-semibold text-gray-400">Some of my most used technologies:</h2>
        <div class="grid grid-cols-5 gap-6 justify-center mt-4">
            {icons.map((icon) => (
                <div class="flex flex-col items-center">
                    <div class="relative w-16 h-16 mx-auto transition-transform duration-300 hover:scale-110">
                        <img src={icon.src} alt={icon.name} class="absolute inset-0 w-full h-full opacity-100 transition-opacity duration-300 hover:opacity-0" />
                        <img src={icon.colorSrc} alt={icon.name} class="absolute inset-0 w-full h-full opacity-0 transition-opacity duration-300 hover:opacity-100" />
                    </div>
                    <p class="mt-2 text-sm text-gray-400">{icon.name}</p>
                </div>
            ))}
        </div>
</section>